# Standard Stack Environment Configuration
# Copy to .env and customize for your environment

# ============================================================================
# Port Configuration
# ============================================================================
SUBSTRATE_PORT=4444
REGISTRY_PORT=4445
AUTH_HUB_PORT=4446

# ============================================================================
# Repository Paths
# ============================================================================
# Root directory containing all repos
# For docker-compose.yml: context should be REPO_ROOT
REPO_ROOT=../..

# Individual repo paths (for dev overrides)
SUBSTRATE_PATH=../../substrate
REGISTRY_PATH=../../registry
AUTH_HUB_PATH=../../auth-hub
SYNAPSE_PATH=../../synapse
HUB_CORE_PATH=../../hub-core
HUB_MACRO_PATH=../../hub-macro
HUB_TRANSPORT_PATH=../../hub-transport
HYPERFORGE_PATH=../../hyperforge
JSEXEC_PATH=../../jsexec

# ============================================================================
# Synapse Configuration (for docker-compose.dev.yml)
# ============================================================================
# Path to synapse binary on host
# Find with: which synapse
SYNAPSE_BIN=~/.cabal/bin/synapse
# Or: SYNAPSE_BIN=/usr/local/bin/synapse

# ============================================================================
# Build Configuration
# ============================================================================
BUILD_PARALLEL=true
RUST_LOG=info
DOCKER_BUILDKIT=1

# ============================================================================
# Runtime Configuration
# ============================================================================
# Secrets directory (mounted into auth-hub)
SECRETS_DIR=./secrets

# Data persistence
REGISTRY_DATA_DIR=./data/registry
SUBSTRATE_DATA_DIR=./data/substrate

# ============================================================================
# Image Configuration
# ============================================================================
SUBSTRATE_IMAGE=substrate-hub:latest
REGISTRY_IMAGE=registry:latest
AUTH_HUB_IMAGE=auth-hub:latest
SYNAPSE_IMAGE=synapse:latest

# ============================================================================
# Resource Limits (optional)
# ============================================================================
SUBSTRATE_MEMORY=512m
REGISTRY_MEMORY=256m
AUTH_HUB_MEMORY=256m

# ============================================================================
# Development Options
# ============================================================================
# Set to 'debug' for verbose logging
# RUST_LOG=debug
# RUST_BACKTRACE=1
